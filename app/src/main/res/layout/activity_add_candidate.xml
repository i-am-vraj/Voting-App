<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCandidateActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cnameET"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:hint="add name"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pqualET"
        android:layout_below="@+id/cnameET"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:hint="add basic edu"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cpastET"
        android:layout_below="@+id/pqualET"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:hint="add history"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cworkET"
        android:layout_below="@+id/cpastET"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:hint="add works"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cpropertyET"
        android:layout_below="@+id/cworkET"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:hint="add property"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cpropertyET"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="upload image"
        android:id="@+id/imgadd"/>

    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:id="@+id/imgView"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imgadd"
        tools:srcCompat="@tools:sample/avatars" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgView"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:text="upload sign"
            android:id="@+id/imgadd2"/>

        <ImageView
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:id="@+id/imgView2"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/imgadd2"
            tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgView2"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="add"
        android:onClick="sendOnChannel1"
        android:id="@+id/button"/>
    </RelativeLayout>

</ScrollView>