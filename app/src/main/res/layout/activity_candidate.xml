<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CandidateActivity">

        <ImageView
            android:id="@+id/candidate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/modiji"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cname"
            android:layout_below="@+id/candidate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:text="Narendra Modi"
            android:textSize="30dp"
            android:textAlignment="center"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pqual"
            android:layout_below="@+id/cname"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="BA from Mithibai collage"
            android:textSize="20dp"
            android:textAlignment="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cpast"
            android:layout_below="@+id/pqual"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Chaiwala, Divorced"
            android:textSize="20dp"
            android:textAlignment="center"
            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cwork"
        android:layout_below="@+id/cpast"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Gujarat Business Expo, Daarubandhi"
        android:textSize="20dp"
        android:textAlignment="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cproperty"
        android:layout_below="@+id/cwork"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="80 lacs"
        android:textSize="20dp"
        android:textAlignment="center"
        />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/party"
            android:text="See Party"
            android:layout_below="@+id/cproperty"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:textAlignment="center"/>
</RelativeLayout>